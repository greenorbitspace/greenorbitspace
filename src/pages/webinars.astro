---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import TicketTailorWidget from "../components/TicketTailorWidget.astro";
---

<Layout title="Webinars">
  <main class="py-12 space-y-16">
    <!-- Constrained hero -->
    <div class="container mx-auto px-6">
      <Hero
        title="Webinars"
        description="Live and on-demand conversations exploring sustainability, integrity, and impact across the space sector."
      />
    </div>

    <!-- Centred widget -->
<section class="py-12">
  <h2 class="text-3xl font-bold text-center mb-8">Upcoming Webinars</h2>

  <div class="w-full max-w-[1200px] mx-auto px-4">
    <iframe
      src="https://luma.com/embed/calendar/cal-M7pTcwuGvDUXUBM/events"
      class="w-full"
      style="
        border: none;
        background: transparent;
        width: 100%;
        height: 1000px; /* adjust to fit all events, avoids scrolling */
        overflow: hidden;
      "
      frameborder="0"
      scrolling="no"
      allowfullscreen
      aria-hidden="false"
      tabindex="0"
    ></iframe>
  </div>
</section>
  </main>
</Layout>